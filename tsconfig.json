{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"],
			"@v/*": ["./src/views/*"],
			"@c/*": ["./src/components/*"],
			"@h/*": ["./src/hooks/*"],
			"@u/*": ["./src/utils/*"],
			"@s/*": ["./src/store/*"],
			"@a/*": ["./src/assets/*"],
			"@r/*": ["./src/router/*"]
		}
	},
	"include": ["./src/**/*"]
}
